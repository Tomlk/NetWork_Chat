<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ADD8E6"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/buddy_top_avatar"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dip"
            android:background="@drawable/avatar_default" />
        <TextView
            android:id="@+id/buddy_top_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="nickname"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/buddy_top_online"
            android:layout_width="14dip"
            android:layout_height="14dip"
            android:layout_marginTop="15dip"
            android:src="@drawable/online" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/LinearLayout1">
        <ImageView
            android:id="@+id/buddy_btn_find"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_find"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <EditText
            android:id="@+id/buddy_input_find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/input_normal"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="70dip"
        android:cacheColorHint="#00000000"
        android:clipToPadding="false"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:paddingBottom="0dip"
        android:paddingTop="10dip" >
    </ListView>
</RelativeLayout>
